<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xml:lang="es-ES">

  <form id="viaje">

  <field name="destino">
    <prompt>
        ¿A donde quieres viajar?
    </prompt>
    <grammar src="ciudades.jsgf"/>
  </field>

  <field name="origen">
    <prompt>
        ¿Desde dónde quieres salir?
    </prompt>
    <grammar src="ciudades.jsgf"/>
  </field>

  <field name="dia">
    <prompt>
        ¿Qué día de la semana?
    </prompt>
    <grammar src="dias.jsgf"/>
  </field>



  <filled>
    <prompt>
        He entendido que quieres viajar a <value expr="destino"/> saliendo desde <value expr="origen"/> el <value expr="dia"/> . Gracias por la llamada. Adios. 
    </prompt>
  </filled>

  </form>

</vxml>
